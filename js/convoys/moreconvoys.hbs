{{#if this}}
    {{#each this}}
        <div class="card car {{#isPast date}}{{/isPast}}">
            <div class="card-content card-content-padding">
                <div class="list">
                    <ul>
                        <li>
                            <a href="/convoy/{{ id }}" class="item-link">
                                <div class="item-content">
                                    <div class="item-media">
                                        <i class="icon f7-icons">persons</i>
                                    </div>
                                    <div class="item-inner">
                                        <div class="item-title">
                                            <!-- Item header, must be first child of item-title -->
                                            <div class="item-header">
                                                {{ destination }}
                                            </div>
                                            <em id="bluetext">{{ date }}</em>
                                            <!-- Item footer, must be last child of item-title -->
                                            <div class="item-footer">
                                                {{ initiator.full_name }} {{#isYou initiator.id}}{{/isYou}}
                                            </div>
                                        </div>
                                        <div class="item-after">
                                            <span class="badge {{#stateColor state.invite}}{{/stateColor}}">
                                                <small>
                                                    {{#shortInvite state.invite}}{{/shortInvite}}
                                                </small>
                                            </span>
                                            <span class="badge {{#convoyState state.convoy}}{{/convoyState}}">
                                                {{#convoyInitial state.convoy}}{{/convoyInitial}}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}