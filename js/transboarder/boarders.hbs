{{#if this}}
  {{#compare this.data.length '==' 0}}
  <blockquote>
    loading your boarder ...
  </blockquote>
  {{/compare}}
  {{#compare this.data.length '!=' 0}}
  {{#each this.data}}
  <div class="card boarder" id="{{ id }}">
    <div class="card-content card-content-padding">
      <div class="list">
        <ul>
          <li>
            <a href="#" class="item-link item-content">
              <div class="item-media"><i class="icon fa fa-globe"></i></div>
              <div class="item-inner">
                <div class="item-title">
                  <div class="item-header">{{ post }}</div>
                  | {{ country }}
                  <div class="item-footer">{{ fee }}</div>
                </div>
                <div class="item-after">
                  <span class="badge color-blue">{{ currency }}</span>
                </div>
              </div>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  {{/each}}
  {{/compare}}
{{/if}}
