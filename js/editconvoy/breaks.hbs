{{#if this}}
    {{#compare this.length "!=" 0}}
        {{#each this}}
            <li class="item-content" id="getLocation2" placeID="{{ place_id }}">
                <div class="item-media"><i class="fa fa-map-marker"></i></div>
                <div class="item-inner item-colors-details">
                    <div class="pt10">
                        <p>
                            <a href="#">
                                {{ description }}
                            </a>
                        </p>
                    </div>
                    <div class="item-after"><span class="badge" id="removeEditBreak"
                                                  index="{{ @index }}">X</span></div>
                </div>
            </li>
        {{/each}}
    {{/compare}}
    {{#compare this.length "==" 0}}
        no break points selected
    {{/compare}}
{{/if}}