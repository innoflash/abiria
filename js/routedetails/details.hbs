{{#if this}}
    <div class="list">
        <ul>
            {{#each this.legs}}
                {{#each steps}}
                    <li class="item-content" id="sendFeedback">
                        <div class="item-media"><i class="f7-icons">compass</i></div>
                        <div class="item-inner item-colors-details">
                            <div class="pt10">
                                <p>
                                    {{{ html_instructions }}}
                                </p>
                                <div class="row">
                                    <div class="chip">
                                        <div class="chip-media bg-color-blue">
                                            <i class="icon f7-icons ios-only color-white">compass</i>
                                        </div>
                                        <div class="chip-label">
                                            {{ distance.text }}
                                        </div>
                                    </div>
                                    <div class="chip">
                                        <div class="chip-media bg-color-green">
                                            <i class="icon f7-icons ios-only color-white">stopwatch</i>
                                        </div>
                                        <div class="chip-label">
                                            {{ duration.text }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                {{/each}}

            {{/each}}
        </ul>
    </div>
{{/if}}
