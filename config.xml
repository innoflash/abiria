<?xml version='1.0' encoding='utf-8'?>
<widget id="net.innoflash.abiri" version="1.0.4" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Abiri</name>
    <description>
        An Abiri travel app
    </description>
    <author email="innocentmazando@gmail.com" href="http://innoflash.net">
        Innocent Mazando
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <engine name="browser" spec="^5.0.3"/>
    <icon src="img/abiri.png"/>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3"/>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1"/>
    <plugin name="cordova-plugin-vibration" spec="^3.0.1"/>
    <plugin name="cordova-plugin-contacts" spec="^3.0.1"/>
